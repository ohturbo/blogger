<h1 class="sub_title"><%= @article.title %></h1>
<p><%= @article.body %></p>

<%= link_to "Back to Articles List", articles_path, class: "article_control" %>

<%= link_to "Edit Article", edit_article_path(@article), class: "article_control" %>

<%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "article_control" %>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>

<%= render partial: 'comments/form' %>